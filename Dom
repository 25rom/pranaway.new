    <!-- Изолированный скрипт только для этой страницы -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const allCards = document.querySelectorAll('.partner-card');

            allCards.forEach(card => {
                const description = card.querySelector('.partner-description');
                const btn = card.querySelector('.expand-btn');

                // Проверяем, есть ли кнопка и описание
                if (!description || !btn) return;

                // Сравниваем реальную высоту контента с видимой высотой блока
                if (description.scrollHeight > description.clientHeight) {
                    // Если текст не помещается, оставляем кнопку видимой
                    btn.style.display = 'inline-block';
                } else {
                    // Если текст помещается полностью, прячем кнопку
                    btn.style.display = 'none';
                }

                // Добавляем обработчик клика на кнопку
                btn.addEventListener('click', () => {
                    // Добавляем/убираем класс, который "разворачивает" карточку
                    card.classList.toggle('is-expanded');

                    // Меняем текст на кнопке
                    if (card.classList.contains('is-expanded')) {
                        btn.textContent = 'Свернуть';
                    } else {
                        btn.textContent = 'Читать далее';
                    }
                });
            });
        });
    </script>
